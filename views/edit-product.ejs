<%- include('include/head.ejs')  %> 
<body>
    <%- include('include/header.ejs')  %>
    <br>
    <form action="/my-product/edit/done" method="POST" role="form" enctype="multipart/form-data" >
        <label >name:</label>
        <input type="text" name="productName" value="<%= product.name %>"><br><br>
        <label>img:</label>    
        <label>price</label>
        <input type="number" step=0.01 name="price" value="<%= product.price %>">
        <input type="hidden"  name="productId" value="<%= product._id %>">
        <input type="file"  name="newImage">
        <input type="hidden"  name="oldImage" value="<%= product.img %>"><br><br>
        <img src="<%= product.img %>" alt=""><br><br>
        <input type="submit" value="Edit">
    </form>
</body>